// puppet distributed file

// Consider adding the 1918 zones here, if they are not used in your
// organization
//include "/etc/bind/zones.rfc1918";
zone "<%= @domain %>" in {
	type <%= @type %>;
	file "<%if @type == 'slave' -%>bak.<% end -%><%= @domain %>.hosts";
	<%if @type == 'slave' -%>masters {<%= @mainNameserverIp %>;};<% end -%>

};
