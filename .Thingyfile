default:
  hypervisor: vmware
  user: root
  pass: 1234
  puppet_master_ip: 10.20.0.2
  puppet_master_hostname: puppet-master-01
  vm:
    hostname: debian-01
    environment: development
    domain: claudio.dev
    base_path: ~/Development/VMWare/VirtualMachines
    install_medium: ~/Development/VMWare/Isos/binary.hybrid.iso
    shared_folders:
      - ./provisioning
    hardware:
      cpu: 1
      memory: 1024
      disk: 10GB

puppet:
  name: <% default.puppet_master_hostname %>
  environment: development
  domain: claudio.dev
  shared_folders:
    - ./puppet
  hardware:
    cpu: 2
    memory: 2048
    disk: 10GB
  network:
    eth0:
      ip: <% default.puppet_master_ip %>
      netmask: 255.255.255.0
      gateway: 10.20.0.1

